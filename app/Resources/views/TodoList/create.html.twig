{% extends "base.html.twig" %}

{% block title %}AppBundle:TodoList:create{% endblock %}

{% block h1 %}
    <h1>Cr√©ation</h1>
{% endblock h1 %}

{% block content %}

    {{ form_start(form) }}

    {% do form.checked.setRendered %}
    {% do form.update.setRendered %}
    {% do form.delete.setRendered %}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_row(form.submit, {'attr': {'class': 'btn'}}) }}
    </div>

    {{ form_end(form) }}
{% endblock %}
